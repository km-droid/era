name: Build CUPS Image (Manual)

on:
  workflow_dispatch:
    inputs:
      env:
        description: "Environment (dev or prod)"
        required: true
        default: dev

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v3

    - name: Set timestamped image tag
      run: echo "IMAGE_TAG=my-cups-${{ github.event.inputs.env }}:$(date +%Y%m%d-%H%M)" >> $GITHUB_ENV

    - name: Build Docker image
      run: |
        docker build \
          --build-arg ENV=${{ github.event.inputs.env }} \
          -t $IMAGE_TAG .

    - name: Print image name
      run: echo "Built image: $IMAGE_TAG"
